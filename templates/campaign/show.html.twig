{% extends 'base.html.twig' %}

{% block title %}{{ campaign.name }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .campaign-hero {
        background: linear-gradient(135deg, {{ campaign.project.color }}15 0%, {{ campaign.project.color }}05 100%);
        border-left: 5px solid {{ campaign.project.color }};
        border-radius: 12px;
        padding: 2.5rem;
        margin-bottom: 2rem;
    }

    .campaign-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--text-dark);
    }

    .stat-card-modern {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.75rem;
        transition: all 0.3s ease;
        height: 100%;
    }

    .stat-card-modern:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px var(--shadow-color);
    }

    .stat-value-modern {
        font-size: 2.75rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-label-modern {
        color: var(--text-light);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 500;
    }

    .progress-modern {
        height: 6px;
        border-radius: 10px;
        background: var(--border-color);
        overflow: hidden;
        margin-top: 0.75rem;
    }

    .progress-fill-modern {
        height: 100%;
        background: {{ campaign.project.color }};
        border-radius: 10px;
        transition: width 0.5s ease;
    }

    .audit-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: all 0.2s ease;
    }

    .audit-card:hover {
        border-color: {{ campaign.project.color }};
        box-shadow: 0 4px 15px var(--shadow-color);
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .conformity-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .badge-excellent {
        background: #d4edda;
        color: #155724;
    }

    .badge-good {
        background: #d1ecf1;
        color: #0c5460;
    }

    .badge-average {
        background: #fff3cd;
        color: #856404;
    }

    .badge-poor {
        background: #f8d7da;
        color: #721c24;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-state-icon {
        font-size: 4rem;
        color: var(--text-light);
        opacity: 0.5;
        margin-bottom: 1.5rem;
    }

    .card-header {
        background: var(--card-bg) !important;
        border-bottom: 2px solid var(--border-color) !important;
    }

    .card-header h5 {
        color: var(--text-dark) !important;
    }
</style>
{% endblock %}

{% block content %}
{# Breadcrumb #}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_project_list') }}"><i class="bi bi-folder"></i> Projets</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_project_show', {id: campaign.project.id}) }}">{{ campaign.project.name }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ campaign.name }}</li>
    </ol>
</nav>

{# Campaign Hero Section #}
<div class="campaign-hero">
    <div class="d-flex justify-content-between align-items-start mb-3">
        <div class="flex-grow-1">
            <h1 class="campaign-title">
                <i class="bi bi-clipboard-data"></i> {{ campaign.name }}
            </h1>
            <div class="mb-3">
                {% if campaign.isArchived %}
                    <span class="badge bg-secondary fs-6">Archivé</span>
                {% elseif campaign.status == 'completed' %}
                    <span class="badge bg-success fs-6"><i class="bi bi-check-circle"></i> Terminé</span>
                {% elseif campaign.status == 'in_progress' %}
                    <span class="badge bg-primary fs-6"><i class="bi bi-hourglass-split"></i> En cours</span>
                {% else %}
                    <span class="badge bg-warning fs-6"><i class="bi bi-pencil"></i> Brouillon</span>
                {% endif %}

                <span class="badge bg-light text-dark fs-6 ms-2">
                    <i class="bi bi-calendar"></i> {{ campaign.startDate|date('d/m/Y') }}
                    {% if campaign.endDate %}
                        → {{ campaign.endDate|date('d/m/Y') }}
                    {% endif %}
                </span>

                <span class="badge bg-light text-dark fs-6 ms-2">
                    <i class="bi bi-tag"></i>
                    {% if campaign.sampleType == 'representative' %}
                        Représentatif
                    {% elseif campaign.sampleType == 'exhaustive' %}
                        Exhaustif
                    {% else %}
                        Personnalisé
                    {% endif %}
                </span>
            </div>
        </div>

        <div class="action-buttons">
            <a href="{{ path('app_campaign_edit', {id: campaign.id}) }}" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <form method="post" action="{{ path('app_campaign_archive', {id: campaign.id}) }}" class="d-inline" onsubmit="return confirm('{% if campaign.isArchived %}Désarchiver cette campagne ?{% else %}Archiver cette campagne ?{% endif %}');">
                <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ campaign.id) }}">
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="bi bi-{% if campaign.isArchived %}arrow-counterclockwise{% else %}archive{% endif %}"></i>
                </button>
            </form>
            <form method="post" action="{{ path('app_campaign_delete', {id: campaign.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer définitivement cette campagne et tous ses audits ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campaign.id) }}">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i>
                </button>
            </form>
        </div>
    </div>

    {% if campaign.description %}
        <div class="alert alert-light border-0 mb-0">
            <i class="bi bi-info-circle"></i> {{ campaign.description }}
        </div>
    {% endif %}
</div>

{# Statistics Cards #}
<div class="row g-4 mb-4">
    <div class="col-lg-4 col-md-6">
        <div class="stat-card-modern">
            <div class="stat-value-modern text-primary">{{ campaign.totalPages ?? 0 }}</div>
            <div class="stat-label-modern">Pages auditées</div>
            {% if campaign.totalPages > 0 %}
                {% set progress = (campaign.completedPageAuditsCount / campaign.totalPages * 100)|round %}
                <div class="progress-modern">
                    <div class="progress-fill-modern" style="width: {{ progress }}%"></div>
                </div>
                <small class="text-muted mt-2 d-block">{{ campaign.completedPageAuditsCount }} terminées</small>
            {% endif %}
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="stat-card-modern">
            <div class="stat-value-modern {% if campaign.avgConformityRate %}
                {% if campaign.avgConformityRate >= 90 %}text-success
                {% elseif campaign.avgConformityRate >= 70 %}text-info
                {% elseif campaign.avgConformityRate >= 50 %}text-warning
                {% else %}text-danger{% endif %}
            {% endif %}">
                {% if campaign.avgConformityRate %}
                    {{ campaign.avgConformityRate }}%
                {% else %}
                    -
                {% endif %}
            </div>
            <div class="stat-label-modern">Conformité moyenne</div>
        </div>
    </div>

    <div class="col-lg-4 col-md-12">
        <div class="stat-card-modern d-flex flex-column justify-content-center align-items-center">
            {% if campaign.actionPlans|length > 0 %}
                <a href="{{ path('app_action_plan_show', {id: campaign.actionPlans|last.id}) }}" class="btn btn-outline-success btn-lg w-100 mb-2">
                    <i class="bi bi-eye"></i> Voir le plan
                </a>
                {% if campaign.hasCompletedAudits() %}
                    <button type="button" class="btn btn-outline-warning btn-lg w-100 mb-2" data-bs-toggle="modal" data-bs-target="#generatePlanModal">
                        <i class="bi bi-arrow-clockwise"></i> Régénérer
                    </button>
                {% endif %}
            {% elseif campaign.hasCompletedAudits() %}
                <button type="button" class="btn btn-success btn-lg w-100 mb-2" data-bs-toggle="modal" data-bs-target="#generatePlanModal">
                    <i class="bi bi-magic"></i> Plan d'action
                </button>
            {% endif %}

            {% if campaign.status != 'completed' and campaign.areAllPagesAudited() %}
                <form method="post" action="{{ path('app_campaign_complete', {id: campaign.id}) }}" class="w-100">
                    <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ campaign.id) }}">
                    <button type="submit" class="btn btn-outline-primary btn-lg w-100">
                        <i class="bi bi-check-circle"></i> Terminer campagne
                    </button>
                </form>
            {% endif %}
        </div>
    </div>
</div>

{# Modal for plan generation #}
{% if campaign.hasCompletedAudits() %}
<div class="modal fade" id="generatePlanModal" tabindex="-1" aria-labelledby="generatePlanModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="generatePlanModalLabel">
                    <i class="bi bi-calendar-check"></i> {% if campaign.actionPlans|length > 0 %}Régénérer le plan d'action{% else %}Générer un plan d'action pluriannuel{% endif %}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="{{ path('app_action_plan_generate', {campaignId: campaign.id}) }}">
                <div class="modal-body">
                    <input type="hidden" name="_token" value="{{ csrf_token('generate_action_plan_' ~ campaign.id) }}">

                    {% if campaign.actionPlans|length > 0 %}
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> <strong>Attention :</strong> Un nouveau plan sera créé en analysant toutes les {{ campaign.pageAudits|length }} page(s) auditée(s). L'ancien plan restera accessible mais ne sera plus affiché par défaut.
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Le plan sera généré en analysant les {{ campaign.pageAudits|length }} page(s) auditée(s).
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <label for="duration_years" class="form-label">Durée du plan</label>
                        <select class="form-select" id="duration_years" name="duration_years" required>
                            <option value="1">1 an</option>
                            <option value="2" selected>2 ans (recommandé)</option>
                            <option value="3">3 ans</option>
                            <option value="4">4 ans</option>
                            <option value="5">5 ans</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-magic"></i> Générer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endif %}

{# Pages List #}
<div class="card border-0 shadow-sm">
    <div class="card-header pt-4 px-4">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-file-earmark-text"></i> Pages de la campagne ({{ campaign.pageAudits|length }})
            </h5>
            <a href="{{ path('app_audit_new', {campaign_id: campaign.id}) }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Auditer une page
            </a>
        </div>
    </div>
    <div class="card-body p-4">
        {% if campaign.pageAudits|length > 0 %}
            {% for audit in campaign.pageAudits %}
                <div class="audit-card">
                    <div class="row align-items-center">
                        <div class="col-lg-5">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0 me-3">
                                    {% if audit.pageType == 'homepage' %}
                                        <i class="bi bi-house-door fs-3 text-primary"></i>
                                    {% elseif audit.pageType == 'form' %}
                                        <i class="bi bi-ui-checks fs-3 text-warning"></i>
                                    {% elseif audit.pageType == 'article' %}
                                        <i class="bi bi-file-text fs-3 text-info"></i>
                                    {% else %}
                                        <i class="bi bi-file-earmark fs-3 text-secondary"></i>
                                    {% endif %}
                                </div>
                                <div class="flex-grow-1">
                                    <a href="{{ path('app_audit_show', {id: audit.id}) }}" class="text-decoration-none fw-semibold">
                                        {{ audit.url|length > 50 ? audit.url|slice(0, 50) ~ '...' : audit.url }}
                                    </a>
                                    {% if audit.pageTitle %}
                                        <br><small class="text-muted">{{ audit.pageTitle|slice(0, 60) }}{% if audit.pageTitle|length > 60 %}...{% endif %}</small>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-2 text-center">
                            {% if audit.conformityRate %}
                                {% set rate = audit.conformityRate %}
                                <span class="conformity-badge
                                    {% if rate >= 90 %}badge-excellent
                                    {% elseif rate >= 70 %}badge-good
                                    {% elseif rate >= 50 %}badge-average
                                    {% else %}badge-poor{% endif %}">
                                    {{ rate }}%
                                </span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </div>

                        <div class="col-lg-3 text-center">
                            {% if audit.totalIssues %}
                                <div class="d-flex justify-content-center gap-2">
                                    {% if audit.criticalCount %}
                                        <span class="badge bg-danger">{{ audit.criticalCount }} critique{% if audit.criticalCount > 1 %}s{% endif %}</span>
                                    {% endif %}
                                    {% if audit.majorCount %}
                                        <span class="badge bg-warning">{{ audit.majorCount }} majeur{% if audit.majorCount > 1 %}s{% endif %}</span>
                                    {% endif %}
                                    {% if audit.minorCount %}
                                        <span class="badge bg-info">{{ audit.minorCount }} mineur{% if audit.minorCount > 1 %}s{% endif %}</span>
                                    {% endif %}
                                </div>
                            {% else %}
                                <span class="text-muted">Aucun problème</span>
                            {% endif %}
                        </div>

                        <div class="col-lg-2 text-end">
                            <a href="{{ path('app_audit_show', {id: audit.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Détails
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <h4 class="mb-2">Aucune page auditée</h4>
                <p class="text-muted mb-3">Cette campagne ne contient pas encore d'audits.</p>
                <a href="{{ path('app_audit_new', {campaign_id: campaign.id}) }}" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Auditer ma première page
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
