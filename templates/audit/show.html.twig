                                    <i class="bi bi-{% if group.source == 'playwright' %}play-circle{% elseif group.source == 'axe-core' %}shield-check{% elseif group.source == 'html_codesniffer' %}code-square{% else %}tool{% endif %}"></i> {{ group.source|upper|replace({'_': '-'}) }}
