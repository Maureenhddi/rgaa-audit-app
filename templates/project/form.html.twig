{% extends 'base.html.twig' %}

{% block title %}{% if is_edit %}Modifier{% else %}Nouveau{% endif %} projet - {{ parent() }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .form-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 2rem;
    }
    .color-preview {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        border: 2px solid var(--border-color);
        display: inline-block;
        vertical-align: middle;
        margin-left: 1rem;
    }
</style>
{% endblock %}

{% block content %}
{# Breadcrumb #}
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_project_list') }}">Projets</a></li>
        {% if is_edit %}
            <li class="breadcrumb-item"><a href="{{ path('app_project_show', {id: project.id}) }}">{{ project.name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modifier</li>
        {% else %}
            <li class="breadcrumb-item active" aria-current="page">Nouveau projet</li>
        {% endif %}
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="form-card">
            <h1 class="mb-4">
                <i class="bi bi-{% if is_edit %}pencil{% else %}plus-circle{% endif %}"></i>
                {% if is_edit %}Modifier le projet{% else %}Nouveau projet{% endif %}
            </h1>

            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
                <div class="form-text">
                    Nom du projet pour identifier facilement vos audits (ex: "Refonte site corporate", "Application mobile v2")
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.clientName) }}
                {{ form_widget(form.clientName) }}
                {{ form_errors(form.clientName) }}
                <div class="form-text">
                    Nom du client ou de l'organisation (optionnel)
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
                <div class="form-text">
                    Description du projet, objectifs d'accessibilité, contexte... (optionnel)
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.color) }}
                    <div class="d-flex align-items-center">
                        {{ form_widget(form.color) }}
                        <div id="color-preview" class="color-preview" style="background-color: {{ form.color.vars.value|default('#016dae') }}"></div>
                    </div>
                    {{ form_errors(form.color) }}
                    {{ form_help(form.color) }}
                </div>

                <div class="col-md-6 mb-3">
                    {{ form_label(form.status) }}
                    {{ form_widget(form.status) }}
                    {{ form_errors(form.status) }}
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> {% if is_edit %}Enregistrer les modifications{% else %}Créer le projet{% endif %}
                </button>
                <a href="{% if is_edit %}{{ path('app_project_show', {id: project.id}) }}{% else %}{{ path('app_project_list') }}{% endif %}" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i> Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
    // Update color preview when color changes
    document.addEventListener('DOMContentLoaded', function() {
        const colorInput = document.querySelector('input[type="color"]');
        const colorPreview = document.getElementById('color-preview');

        if (colorInput && colorPreview) {
            colorInput.addEventListener('input', function() {
                colorPreview.style.backgroundColor = this.value;
            });
        }
    });
</script>
{% endblock %}
