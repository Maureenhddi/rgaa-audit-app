{% extends 'base.html.twig' %}

{% block title %}{{ project.name }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .project-header {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }
    .project-header::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 6px;
        background: {{ project.color }};
    }
    .stat-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 1.5rem;
        text-align: center;
        transition: transform 0.2s ease;
    }
    .stat-card:hover {
        transform: translateY(-2px);
    }
    .stat-card .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
    }
    .stat-card .stat-label {
        color: var(--text-light);
        font-size: 0.9rem;
    }
    .stat-card .stat-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
        opacity: 0.7;
    }
    .audit-row:hover {
        background-color: var(--bg-light);
    }
</style>
{% endblock %}

{% block content %}
{# Breadcrumb #}
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_project_list') }}">Projets</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ project.name }}</li>
    </ol>
</nav>

{# Project Header #}
<div class="project-header">
    <div class="d-flex justify-content-between align-items-start mb-3">
        <div class="flex-grow-1">
            <h1 class="mb-2">
                <i class="bi bi-folder"></i> {{ project.name }}
                {% if project.isArchived %}
                    <span class="badge bg-secondary ms-2">Archivé</span>
                {% elseif project.status == 'completed' %}
                    <span class="badge bg-success ms-2">Terminé</span>
                {% else %}
                    <span class="badge bg-primary ms-2">Actif</span>
                {% endif %}
            </h1>
            {% if project.clientName %}
                <p class="text-muted mb-2">
                    <i class="bi bi-building"></i> {{ project.clientName }}
                </p>
            {% endif %}
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_project_edit', {id: project.id}) }}" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <form method="post" action="{{ path('app_project_archive', {id: project.id}) }}" class="d-inline" onsubmit="return confirm('{% if project.isArchived %}Êtes-vous sûr de vouloir désarchiver ce projet ?{% else %}Êtes-vous sûr de vouloir archiver ce projet ?{% endif %}');">
                <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ project.id) }}">
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="bi bi-{% if project.isArchived %}arrow-counterclockwise{% else %}archive{% endif %}"></i>
                    {% if project.isArchived %}Désarchiver{% else %}Archiver{% endif %}
                </button>
            </form>
            <form method="post" action="{{ path('app_project_delete', {id: project.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ? Cette action est irréversible.');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Supprimer
                </button>
            </form>
        </div>
    </div>

    {% if project.description %}
        <div class="mt-3">
            <h5 class="text-muted mb-2">Description</h5>
            <p class="mb-0">{{ project.description }}</p>
        </div>
    {% endif %}

    <div class="row mt-3">
        <div class="col-md-6">
            <small class="text-muted">
                <i class="bi bi-calendar-plus"></i> Créé le {{ project.createdAt|date('d/m/Y à H:i') }}
            </small>
        </div>
        <div class="col-md-6 text-md-end">
            <small class="text-muted">
                <i class="bi bi-pencil-square"></i> Modifié le {{ project.updatedAt|date('d/m/Y à H:i') }}
            </small>
        </div>
    </div>
</div>

{# Statistics #}
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-clipboard-data" style="color: var(--info-color);"></i>
            </div>
            <div class="stat-value">{{ project.campaignCount }}</div>
            <div class="stat-label">Campagne{% if project.campaignCount > 1 %}s{% endif %}</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-file-earmark-text" style="color: var(--success-color);"></i>
            </div>
            <div class="stat-value">{{ project.auditCount }}</div>
            <div class="stat-label">Page{% if project.auditCount > 1 %}s{% endif %} auditée{% if project.auditCount > 1 %}s{% endif %}</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-graph-up" style="color: var(--primary-color);"></i>
            </div>
            <div class="stat-value">
                {% if project.averageConformity %}
                    {{ project.averageConformity }}%
                {% else %}
                    -
                {% endif %}
            </div>
            <div class="stat-label">Conformité moyenne</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-clock-history" style="color: var(--text-light);"></i>
            </div>
            <div class="stat-value" style="font-size: 1.2rem;">
                {% if project.lastAuditDate %}
                    {{ project.lastAuditDate|date('d/m/Y') }}
                {% else %}
                    -
                {% endif %}
            </div>
            <div class="stat-label">Dernier audit</div>
        </div>
    </div>
</div>

{# Campaigns List #}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-clipboard-data"></i> Campagnes d'audit
        </h5>
        <a href="{{ path('app_campaign_new', {projectId: project.id}) }}" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle campagne
        </a>
    </div>
    <div class="card-body">
        {% if project.auditCampaigns|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Statut</th>
                            <th class="text-center">Pages</th>
                            <th>Conformité</th>
                            <th>Date début</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for campaign in project.auditCampaigns %}
                            <tr class="audit-row">
                                <td>
                                    <a href="{{ path('app_campaign_show', {id: campaign.id}) }}" class="text-decoration-none">
                                        {{ campaign.name }}
                                    </a>
                                </td>
                                <td>
                                    {% if campaign.isArchived %}
                                        <span class="badge bg-secondary">Archivé</span>
                                    {% elseif campaign.status == 'completed' %}
                                        <span class="badge bg-success">Terminé</span>
                                    {% elseif campaign.status == 'in_progress' %}
                                        <span class="badge bg-primary">En cours</span>
                                    {% else %}
                                        <span class="badge bg-warning">Brouillon</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info">{{ campaign.totalPages ?? 0 }}</span>
                                    {% if campaign.totalPages > 0 %}
                                        <small class="text-muted">({{ campaign.completedPageAuditsCount }} terminées)</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if campaign.avgConformityRate %}
                                        <strong>{{ campaign.avgConformityRate }}%</strong>
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>
                                    <small class="text-muted">{{ campaign.startDate|date('d/m/Y') }}</small>
                                </td>
                                <td>
                                    <a href="{{ path('app_campaign_show', {id: campaign.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Voir
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--text-light);"></i>
                <h4 class="mt-3 mb-2">Aucune campagne d'audit</h4>
                <p class="text-muted mb-4">
                    Créez une campagne d'audit pour auditer plusieurs pages de ce projet.
                    <br>
                    <small>Une campagne permet d'obtenir une vue d'ensemble de la conformité du site.</small>
                </p>
                <a href="{{ path('app_campaign_new', {projectId: project.id}) }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Créer une campagne
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
