{% extends 'base.html.twig' %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .welcome-section {
        background: linear-gradient(135deg, #f59c16 0%, #d98913 100%);
        color: white;
        padding: 3rem 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(245, 156, 22, 0.3);
    }

    .welcome-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .welcome-subtitle {
        font-size: 1.1rem;
        opacity: 0.95;
    }

    .action-card {
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        height: 100%;
        background: var(--card-bg);
        box-shadow: 0 2px 10px var(--shadow-color);
    }

    .action-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 30px var(--shadow-color);
    }

    .action-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.9;
    }

    .action-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: var(--text-dark);
    }

    .action-description {
        color: var(--text-medium);
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .action-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }
</style>
{% endblock %}

{% block content %}
{# Welcome Banner #}
<div class="welcome-section">
    <div class="container">
        <h1 class="welcome-title">
            <i class="bi bi-house-heart"></i> Bienvenue sur RGAA Audit
        </h1>
        <p class="welcome-subtitle mb-0">
            Auditez l'accessibilité de vos sites web en conformité avec le référentiel RGAA 4.1
        </p>
    </div>
</div>

{# Quick Actions Grid #}
<div class="container">
    <h2 class="mb-4">
        <i class="bi bi-lightning-charge text-warning"></i> Que souhaitez-vous faire ?
    </h2>

    <div class="row g-4">
        {# New Project #}
        <div class="col-lg-3 col-md-6">
            <a href="{{ path('app_project_new') }}" class="action-link">
                <div class="action-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-folder-plus action-icon text-success"></i>
                        <h3 class="action-title">Nouveau projet</h3>
                        <p class="action-description">
                            Créez un projet pour organiser vos audits
                        </p>
                    </div>
                </div>
            </a>
        </div>

        {# View Campaigns #}
        <div class="col-lg-3 col-md-6">
            <a href="{{ path('app_campaign_list') }}" class="action-link">
                <div class="action-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-collection-fill action-icon text-info"></i>
                        <h3 class="action-title">Mes campagnes</h3>
                        <p class="action-description">
                            Gérez vos campagnes d'audit multi-pages
                        </p>
                    </div>
                </div>
            </a>
        </div>

        {# View Projects #}
        <div class="col-lg-3 col-md-6">
            <a href="{{ path('app_project_list') }}" class="action-link">
                <div class="action-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-folder2-open action-icon text-warning"></i>
                        <h3 class="action-title">Mes projets</h3>
                        <p class="action-description">
                            Accédez à tous vos projets
                        </p>
                    </div>
                </div>
            </a>
        </div>

        {# Documentation WCAG #}
        <div class="col-lg-3 col-md-6">
            <a href="https://www.w3.org/WAI/WCAG21/quickref/" target="_blank" class="action-link">
                <div class="action-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-journal-text action-icon text-primary"></i>
                        <h3 class="action-title">WCAG 2.1</h3>
                        <p class="action-description">
                            Référence rapide WCAG 2.1
                        </p>
                    </div>
                </div>
            </a>
        </div>

        {# Action Plans #}
        <div class="col-lg-3 col-md-6">
            <a href="{{ path('app_action_plan_list') }}" class="action-link">
                <div class="action-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-clipboard-check action-icon text-danger"></i>
                        <h3 class="action-title">Plans d'action</h3>
                        <p class="action-description">
                            Suivez vos plans de correction
                        </p>
                    </div>
                </div>
            </a>
        </div>

        {# Documentation #}
        <div class="col-lg-3 col-md-6">
            <a href="https://accessibilite.numerique.gouv.fr/" target="_blank" class="action-link">
                <div class="action-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-book action-icon text-info"></i>
                        <h3 class="action-title">Documentation RGAA</h3>
                        <p class="action-description">
                            Consultez le référentiel RGAA 4.1
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}
