{% extends 'base.html.twig' %}

{% block title %}Dashboard - {{ parent() }}{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-speedometer2"></i> Dashboard</h1>
    <a href="{{ path('app_audit_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nouvel audit
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <h6 class="text-muted">Total audits</h6>
                <h2 class="mb-0">{{ statistics.totalAudits }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card" style="border-left-color: var(--success-color)">
            <div class="card-body">
                <h6 class="text-muted">Conformité moyenne</h6>
                <h2 class="mb-0">{{ statistics.avgConformity }}%</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card" style="border-left-color: var(--critical-color)">
            <div class="card-body">
                <h6 class="text-muted">Problèmes critiques</h6>
                <h2 class="mb-0">{{ statistics.totalCritical }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card" style="border-left-color: var(--major-color)">
            <div class="card-body">
                <h6 class="text-muted">Problèmes majeurs</h6>
                <h2 class="mb-0">{{ statistics.totalMajor }}</h2>
            </div>
        </div>
    </div>
</div>

{% if conformity_evolution|length > 0 %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-graph-up"></i> Évolution de la conformité</h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="conformityChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Audits récents</h5>
            </div>
            <div class="card-body">
                {% if recent_audits|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>URL</th>
                                    <th>Date</th>
                                    <th>Statut</th>
                                    <th>Conformité</th>
                                    <th>Problèmes</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for audit in recent_audits %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_audit_show', {id: audit.id}) }}">
                                            {{ audit.url|length > 50 ? audit.url|slice(0, 50) ~ '...' : audit.url }}
                                        </a>
                                    </td>
                                    <td>{{ audit.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>
                                        {% if audit.status == 'completed' %}
                                            <span class="badge bg-success">Terminé</span>
                                        {% elseif audit.status == 'running' %}
                                            <span class="badge bg-primary">En cours</span>
                                        {% elseif audit.status == 'failed' %}
                                            <span class="badge bg-danger">Échoué</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ audit.status }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if audit.conformityRate %}
                                            <strong>{{ audit.conformityRate }}%</strong>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge severity-critical">{{ audit.criticalCount }}</span>
                                        <span class="badge severity-major">{{ audit.majorCount }}</span>
                                        <span class="badge severity-minor">{{ audit.minorCount }}</span>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_audit_show', {id: audit.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Voir
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Aucun audit pour le moment.
                        <a href="{{ path('app_audit_new') }}">Créez votre premier audit</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% if conformity_evolution|length > 0 %}
<script>
    const ctx = document.getElementById('conformityChart');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: [
                {% for item in conformity_evolution %}
                    '{{ item.createdAt|date('d/m/Y') }}'{% if not loop.last %},{% endif %}
                {% endfor %}
            ],
            datasets: [{
                label: 'Taux de conformité (%)',
                data: [
                    {% for item in conformity_evolution %}
                        {{ item.conformityRate }}{% if not loop.last %},{% endif %}
                    {% endfor %}
                ],
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.1)',
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100,
                    ticks: {
                        callback: function(value) {
                            return value + '%';
                        }
                    }
                }
            }
        }
    });
</script>
{% endif %}
{% endblock %}
