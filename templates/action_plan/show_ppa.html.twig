{# Executive Summary #}
{% if action_plan.executiveSummary %}
<div class="strategic-card">
    <h3><i class="bi bi-file-text"></i> Résumé stratégique</h3>
    <div class="markdown-content">
        {{ action_plan.executiveSummary|raw }}
    </div>
</div>
{% endif %}

{# Strategic Orientations #}
{% if action_plan.strategicOrientations %}
<div class="strategic-card">
    <h3><i class="bi bi-compass"></i> Grandes orientations stratégiques</h3>
    {% for orientation in action_plan.strategicOrientations %}
        <div class="orientation-item">
            <strong>{{ loop.index }}.</strong> {{ orientation }}
        </div>
    {% endfor %}
</div>
{% endif %}

{# Progress Axes #}
{% if action_plan.progressAxes %}
<div class="strategic-card">
    <h3><i class="bi bi-bar-chart-steps"></i> Axes de progrès</h3>
    {% for title, description in action_plan.progressAxes %}
        <div class="axis-item">
            <div class="axis-title"><i class="bi bi-arrow-right-circle"></i> {{ title }}</div>
            <div class="axis-description">{{ description }}</div>
        </div>
    {% endfor %}
</div>
{% endif %}

{# Annual Objectives #}
{% if action_plan.annualObjectives %}
<div class="strategic-card">
    <h3><i class="bi bi-flag"></i> Objectifs annuels</h3>
    {% for year, objectives in action_plan.annualObjectives %}
        <h5 style="color: #60a5fa; margin-top: 1.5rem; margin-bottom: 1rem;">
            <i class="bi bi-calendar-check"></i> Année {{ year }}
        </h5>
        <ul style="color: #d1d5db;">
            {% for objective in objectives %}
                <li style="margin-bottom: 0.5rem;">{{ objective }}</li>
            {% endfor %}
        </ul>
    {% endfor %}
</div>
{% endif %}

{# Resources #}
{% if action_plan.resources %}
<div class="strategic-card">
    <h3><i class="bi bi-tools"></i> Moyens mis en œuvre</h3>
    <ul style="color: #d1d5db;">
        {% for resource in action_plan.resources %}
            <li style="margin-bottom: 0.75rem;">{{ resource }}</li>
        {% endfor %}
    </ul>
</div>
{% endif %}

{# Indicators #}
{% if action_plan.indicators %}
<div class="strategic-card">
    <h3><i class="bi bi-graph-up-arrow"></i> Indicateurs de suivi</h3>
    {% for indicator, target in action_plan.indicators %}
        <div class="indicator-item">
            <span style="font-weight: 600;">{{ indicator }}</span>
            <span style="color: #a78bfa;">{{ target }}</span>
        </div>
    {% endfor %}
</div>
{% endif %}

{# Annual Plans Links #}
<div class="strategic-card">
    <h3><i class="bi bi-calendar2-range"></i> Plans d'action annuels (détails opérationnels)</h3>
    <p style="color: #9ca3af; margin-bottom: 1.5rem;">
        Cliquez sur une année pour accéder aux détails techniques : critères RGAA, erreurs A11yLint, composants défaillants, estimations d'effort.
    </p>

    <div class="row g-3">
        {% if action_plan.annualPlans|length > 0 %}
            {% for annualPlan in action_plan.annualPlans %}
                <div class="col-lg-6">
                    <a href="{{ path('app_annual_action_plan_show', {id: annualPlan.id}) }}" style="text-decoration: none;">
                        <div class="annual-plan-card">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h4 class="mb-0" style="color: white;">
                                    <i class="bi bi-calendar-event"></i> Année {{ annualPlan.year }}
                                </h4>
                                <span class="badge" style="background: rgba(255,255,255,0.2);">
                                    {{ annualPlan.items|length }} actions
                                </span>
                            </div>
                            <div class="d-flex flex-wrap gap-3 small">
                                <span><i class="bi bi-exclamation-triangle"></i> {{ annualPlan.criticalCount }} critiques</span>
                                <span><i class="bi bi-clock"></i> {{ annualPlan.totalEstimatedEffort }}h</span>
                                <span><i class="bi bi-lightning-charge"></i> {{ annualPlan.quickWinsCount }} quick wins</span>
                            </div>
                            <div class="mt-2 small opacity-75">
                                <i class="bi bi-arrow-right-circle"></i> {{ annualPlan.completionPercentage|number_format(0) }}% complété
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> Aucun plan d'action annuel n'a encore été généré.
