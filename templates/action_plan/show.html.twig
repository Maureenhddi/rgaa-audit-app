<script>
document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality
    const filterButtons = document.querySelectorAll('.filter-btn');
    const actionItems = document.querySelectorAll('.action-item-card');

    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const filter = this.dataset.filter;

            // Update active button
            filterButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');

            // Filter items
            actionItems.forEach(item => {
                const severity = item.dataset.severity;
                const status = item.dataset.status;

                if (filter === 'all') {
                    item.style.display = '';
                } else if (filter === 'critical' || filter === 'major' || filter === 'minor') {
                    item.style.display = severity === filter ? '' : 'none';
                } else if (filter === 'pending' || filter === 'completed') {
                    item.style.display = status === filter ? '' : 'none';
                }
            });
        });
    });
});

// Function to copy HTML code to clipboard
function copyHtmlCode() {
    const htmlCode = document.getElementById('htmlCode');
    const copyBtn = document.getElementById('copyBtn');

    // Select the text
    htmlCode.select();
    htmlCode.setSelectionRange(0, 99999); // For mobile devices

    // Copy to clipboard
    navigator.clipboard.writeText(htmlCode.value).then(function() {
        // Success feedback
        const originalContent = copyBtn.innerHTML;
        copyBtn.innerHTML = '<i class="bi bi-check-circle"></i> Copié !';
        copyBtn.classList.remove('btn-success');
        copyBtn.classList.add('btn-primary');

        setTimeout(function() {
            copyBtn.innerHTML = originalContent;
            copyBtn.classList.remove('btn-primary');
            copyBtn.classList.add('btn-success');
        }, 2000);
    }).catch(function(err) {
        // Fallback for older browsers
        try {
            document.execCommand('copy');
            const originalContent = copyBtn.innerHTML;
            copyBtn.innerHTML = '<i class="bi bi-check-circle"></i> Copié !';
            copyBtn.classList.remove('btn-success');
            copyBtn.classList.add('btn-primary');

            setTimeout(function() {
                copyBtn.innerHTML = originalContent;
                copyBtn.classList.remove('btn-primary');
                copyBtn.classList.add('btn-success');
            }, 2000);
        } catch(err) {
            alert('Erreur lors de la copie. Veuillez sélectionner le texte manuellement.');
        }
    });
}

// ========== DRAG & DROP FUNCTIONALITY ==========
// Load SortableJS library
const sortableScript = document.createElement('script');
sortableScript.src = 'https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js';
sortableScript.onload = function() {
    // Initialize Sortable on all sortable containers with shared group
    const sortableContainers = document.querySelectorAll('.sortable-container');

    sortableContainers.forEach(container => {
        new Sortable(container, {
            group: 'action-items', // Shared group allows dragging between containers
            animation: 150,
            ghostClass: 'sortable-ghost',
            dragClass: 'sortable-drag',
            handle: '.action-item-card',
            onEnd: function(evt) {
                // Get the container where the item was dropped
                const targetContainer = evt.to;
                const newYear = targetContainer.dataset.year;
                const newQuarter = targetContainer.dataset.quarter;

                // Get the moved item
                const movedItemId = evt.item.dataset.id;

                // Collect ALL items from ALL containers with their new positions
                const allItems = [];
                document.querySelectorAll('.sortable-container').forEach(cont => {
                    const year = cont.dataset.year;
                    const quarter = cont.dataset.quarter;

                    cont.querySelectorAll('.action-item-card').forEach((card, index) => {
                        allItems.push({
                            id: parseInt(card.dataset.id),
                            year: parseInt(year),
                            quarter: parseInt(quarter.replace('Q', '')),
                            displayOrder: index
                        });
                    });
                });

                // Save new order and positions to server
                fetch('{{ path('app_action_plan_reorder', {id: action_plan.id}) }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        _token: '{{ csrf_token('reorder_action_plan_' ~ action_plan.id) }}',
                        items: allItems
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Update quarter badges count
                        document.querySelectorAll('.sortable-container').forEach(cont => {
                            const count = cont.querySelectorAll('.action-item-card').length;
                            const quarterSection = cont.closest('.quarter-section');
                            if (quarterSection) {
                                const badge = quarterSection.querySelector('.badge.bg-primary');
                                if (badge) {
                                    badge.textContent = `${count} action(s)`;
                                }
                            }
                        });

                        // Show success feedback
                        const toast = document.createElement('div');
                        toast.className = 'position-fixed bottom-0 end-0 p-3';
                        toast.style.zIndex = '9999';
                        toast.innerHTML = `
                            <div class="toast show" role="alert">
                                <div class="toast-header bg-success text-white">
                                    <strong class="me-auto"><i class="bi bi-check-circle"></i> Ordre sauvegardé</strong>
                                    <button type="button" class="btn-close btn-close-white" onclick="this.closest('.toast').remove()"></button>
                                </div>
                                <div class="toast-body">
                                    Action déplacée vers ${newQuarter} ${newYear} !
                                </div>
                            </div>
                        `;
                        document.body.appendChild(toast);
                        setTimeout(() => toast.remove(), 3000);
                    }
                })
                .catch(error => {
                    console.error('Error saving order:', error);
                    alert('Erreur lors de la sauvegarde de l\'ordre');
                });
            }
        });
    });
};
document.head.appendChild(sortableScript);
</script>

